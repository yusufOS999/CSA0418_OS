#include <stdio.h>
#include <dirent.h>
int main() {
    DIR *d;
    struct dirent *dir;
    d = opendir(".");
    if (d == NULL) {
        perror("Unable to open current directory");
        return 1;
    }
    printf("Files and directories in current folder:\n");

    while ((dir = readdir(d)) != NULL) {
        printf("%s  ", dir->d_name);
    }
    printf("\n");
    closedir(d);
    return 0;
}                        
