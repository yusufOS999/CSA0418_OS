#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main() {
    char filename[100], pattern[100], line[1024];
    FILE *fp;
    printf("Enter filename: ");
    scanf("%s", filename);
    printf("Enter pattern to search: ");
    scanf("%s", pattern);
    fp = fopen(filename, "r");
    if (fp == NULL) {
        perror("Error opening file");
        return 1;
    }
    printf("\nMatching lines:\n");
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {
            printf("%s", line);
        }
    }
    fclose(fp);
    return 0;
}
